<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lily_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/cardGameTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="contact det"
            android:background="@color/blue_300"
            android:textColor="@color/grey_1000w"/>
        <ImageView
            android:id="@+id/oppositionImg"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:layout_below="@id/cardGameTitle"/>
        <TextView
            android:id="@+id/gameOpposition"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:layout_toRightOf="@id/oppositionImg"/>
        <TextView
            android:id="@+id/gameResult"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:layout_toRightOf="@id/gameResult"/>
        <TextView
            android:id="@+id/gameScoreTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:layout_toRightOf="@id/gameResult"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>