<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_game_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/button_player_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_delete_grey600_24dp"
            android:contentDescription="Playerデータ削除"/>
        <ImageView
            android:id="@+id/button_player_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_info_outline_white_24dp"
            android:contentDescription="Playerデータ更新"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/game_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:text="@string/game_list_view_filter"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/searchKeyDate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="試合日"/>
            <Spinner
                android:id="@+id/searchKeyDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.Light.Spinner"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/searchKeyCategory_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="カテゴリー"/>
            <Spinner
                android:id="@+id/searchKeyCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.Light.Spinner"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/searchKeyType_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="タイプ"
                android:layout_toRightOf="@+id/searchKeyCategory_title"
                android:layout_alignTop="@+id/game_filter"/>
            <Spinner
                android:id="@+id/searchKeyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_toRightOf="@+id/searchKeyCategory_title"
                android:layout_below="@+id/searchKeyType_title"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_game"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_white_24dp"
            fab:fab_colorNormal="@color/floating_button_primary"
            fab:fab_colorPressed="@color/floating_button_primary_pressed"
            fab:fab_colorRipple="@color/floating_button_ripple" />
    </FrameLayout>

</LinearLayout>
